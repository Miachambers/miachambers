    <script>
        const modal = document.getElementById("myStoryModal");
        document.getElementById("openStory").onclick = () => modal.style.display = "flex";
        document.getElementById("closeModal").onclick = () => modal.style.display = "none";
        window.onclick = (e) => { if (e.target == modal) modal.style.display = "none"; }

        const tabs = document.querySelectorAll('.tab-btn');
        tabs.forEach(tab => {
            tab.onclick = () => {
                tabs.forEach(t => t.classList.remove('text-accent-pink', 'border-accent-pink'));
                tab.classList.add('text-accent-pink', 'border-accent-pink');
                document.querySelectorAll('.tab-content').forEach(c => c.classList.remove('active'));
                document.getElementById(tab.dataset.target).classList.add('active');
            }
        });
    </script>
